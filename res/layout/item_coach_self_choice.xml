<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="40dip" >

    <ImageView
        android:id="@+id/id_img_coach_self"
        android:layout_width="70dip"
        android:layout_height="100dip"
        android:src="@drawable/coach" />

    <LinearLayout
        android:id="@+id/id_coach_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dip"
        android:paddingTop="10dip"
        android:layout_toRightOf="@id/id_img_coach_self" >

        <TextView
            android:id="@+id/id_tv_coach_price"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_gravity="center_vertical"
            android:text="价格:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_tv_coach_teach_type"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_gravity="center_vertical"
            android:text="教学类型:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_tv_coach_order_level"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_gravity="center_vertical"
            android:text="教练星级"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_coach_more_info"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:gravity="center"
            android:paddingLeft="40dip"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>