<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="40dip"
    android:layout_height="wrap_content" 
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_img_coach_self"
        android:layout_width="70dip"
        android:layout_height="100dip"
        android:src="@drawable/coach" />

    <LinearLayout 
        android:id="@+id/id_coach_price"
        android:layout_width="match_parent"
        android:paddingTop="10dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/id_tv_coach_price" 
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:paddingLeft="40dip"
        android:layout_gravity="center_vertical"
        android:text="价格:"
        android:textSize="14sp" />
    
    
    <TextView
        android:id="@+id/id_tv_coach_teach_type"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:paddingLeft="40dip"
        android:layout_gravity="center_vertical"
        android:text="教学类型:"
        android:textSize="14sp" />
 
    <TextView
        android:id="@+id/id_tv_coach_order_times" 
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_gravity="center_vertical"
        android:paddingLeft="40dip"
        android:text="预约次数:"
        android:textSize="14sp" />
    
    <TextView
          android:id="@+id/id_coach_more_info"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:paddingLeft="40dip"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        
         />
    </LinearLayout>

</LinearLayout>