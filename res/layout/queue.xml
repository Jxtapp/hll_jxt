<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 位置定位 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:orientation="horizontal"
        android:paddingTop="5dip" >

        <ImageView
            android:id="@+id/id_location_queue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:contentDescription="@string/this_is_picture"
            android:paddingLeft="40dip"
            android:src="@drawable/location_queue" />

        <TextView
            android:id="@+id/id_tx_location_queue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="20dip"
            android:paddingTop="3dip"
            android:text="@string/location_example"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_down_queue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/this_is_picture"
            android:paddingLeft="15dip"
            android:src="@drawable/down_location" />
    </LinearLayout>

   <!-- -->  <ScrollView 
        android:id="@+id/id_queue_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     
     
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
      
        <!-- 约车 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="20dip" >

            <LinearLayout
                android:id="@+id/id_order_learn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_img_order_learn"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_gravity="center"
                    android:contentDescription="@string/this_is_picture"
                    android:src="@drawable/order_learn" />

                <TextView
                    android:id="@+id/id_tx_order_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dip"
                    android:text="@string/order_learn"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_queue_wait"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_img_queue_wait"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_gravity="center"
                    android:background="@drawable/queue_wait" />

                <TextView
                    android:id="@+id/id_tx_queue_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dip"
                    android:text="@string/queue_wait"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- 功能行 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:orientation="horizontal"
            android:paddingTop="10dip" >

            <LinearLayout
                android:id="@+id/id_app_indroduce"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dip" >

                <ImageView
                    android:id="@+id/id_img_app_indroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:src="@drawable/app_introduce" />

                <TextView
                    android:id="@+id/id_tx_app_indroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:text="@string/app_introduce"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_function_info"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_img_function_info"
                    android:layout_width="wrap_content"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:src="@drawable/function_info" />

                <TextView
                    android:id="@+id/id_tx_function_info"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:text="@string/function_info"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_guarantee_service"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_img_guarantee_service"
                    android:layout_width="wrap_content"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:src="@drawable/guarantee_service" />

                <TextView
                    android:id="@+id/id_tx_guarantee_service"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:text="@string/guarantee_service"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_feedback_pass"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_img_feedback_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:src="@drawable/feedback_pass" />

                <TextView
                    android:id="@+id/id_tx_feedback_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:text="@string/feedback_pass"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_about_us_call"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_img_about_us_call"
                    android:layout_width="wrap_content"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:src="@drawable/about_us_call" />

                <TextView
                    android:id="@+id/id_tx_about_us_call"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:text="@string/about_us_call"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

       
        <!-- 自选教练列表 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:text="@string/students_can_choice_coach_by_yourself"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal" 
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" >

                    <Spinner
                        android:id="@+id/id_sp_place_choice"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="6" >

                    <Spinner
                        android:id="@+id/id_sp_teach_type"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="6" >

                    <Spinner
                        android:id="@+id/id_sp_near_place"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 教练推荐 -->

        <ListView
            android:id="@+id/id_coach_self_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
        
   </LinearLayout>         
   </ScrollView>  
</LinearLayout>