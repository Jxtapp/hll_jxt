<?xml version="1.0" encoding="utf-8"?>  <!-- 驾校列表 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	     android:paddingLeft="25dip"
	     android:paddingRight="20dip"
	     android:paddingTop="10dip"
	    >
	    
	    <ImageView 
	        android:id="@+id/item_img"
	        android:layout_width="100sp"
	        android:layout_height="100sp"
	        android:padding="1dip"
	        android:paddingLeft="10dip"
	        android:src="@drawable/driver_school_pic0"
	        />
	    <TextView 
	        android:id="@+id/item_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="价格:"
	        android:paddingLeft="20dip"
	        android:layout_toRightOf="@id/item_img"/>
	    <TextView 
	        android:id="@+id/item_price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@id/item_name"/>
	     <TextView 
	         android:id="@+id/former_price0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="原价:"
	        android:paddingLeft="10dip"
	        android:layout_toRightOf="@id/item_price"/>
	    <TextView 
	        android:id="@+id/former_prive"
	        android:layout_width="match_parent"
	        android:layout_toRightOf="@id/former_price0"
	        android:layout_height="wrap_content"/>
	    
	    <TextView 
	        android:id="@+id/id_place"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="地点:"
	        android:paddingLeft="20dip"
	        android:layout_toRightOf="@id/item_img"
	        android:layout_below="@id/item_name"/>
	    <TextView 
	        android:id="@+id/item_address"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/id_place"
	        android:layout_below="@id/former_prive"/>
	    
	    <TextView 
	        android:id="@+id/person_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="报名人数:"
	        android:paddingLeft="20dip"
	        android:layout_toRightOf="@id/item_img"
	        android:layout_below="@id/id_place"/>
	    <TextView 
	        android:id="@+id/item_num"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dip"
	        android:layout_toRightOf="@id/person_number"
	        android:layout_below="@id/item_address"/>

</RelativeLayout>